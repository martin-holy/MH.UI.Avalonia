<DataTemplates
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mhc="clr-namespace:MH.UI.AvaloniaUI.Controls;assembly=MH.UI.AvaloniaUI"
  xmlns:ap="clr-namespace:MH.UI.AvaloniaUI.AttachedProperties;assembly=MH.UI.AvaloniaUI"
  xmlns:vml="clr-namespace:MH.UI.AvaloniaUI.Sample.ViewModels.Layout">
    
  <DataTemplate DataType="{x:Type vml:StatusBarVM}">
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="Status bar"/>
      <mhc:IconTextBlock ap:Text.Text="Sample" ap:Icon.Data="{StaticResource IconRandom}"/>
      <Path Classes="icon shadow" ap:Icon.Res="IconImage"/>
    </StackPanel>
  </DataTemplate>
</DataTemplates>