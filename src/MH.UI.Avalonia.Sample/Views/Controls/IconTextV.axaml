<DataTemplates
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vmc="clr-namespace:MH.UI.Avalonia.Sample.ViewModels.Controls"
  xmlns:ap="clr-namespace:MH.UI.Avalonia.AttachedProperties;assembly=MH.UI.Avalonia"
  xmlns:c="clr-namespace:MH.UI.Avalonia.Controls;assembly=MH.UI.Avalonia">

  <DataTemplate DataType="{x:Type vmc:IconTextVM}">
    <StackPanel>
      <c:IconTextBlockItemsControl
        ItemsSource="{Binding Data}"
        ap:Icon.Res="IconBug"
        ItemTemplate="{StaticResource MH.DT.TextBlock.Border.RoundDarker}"/>

      <c:IconTextBlockItemsControl
        ItemsSource="{Binding Data}"
        ap:Icon.Res="IconBug"
        Classes="{StaticResource MH.S.IconTextBlockItemsControl.Borders.RoundDark}"
        Height="60"/>
    </StackPanel>
  </DataTemplate>
</DataTemplates>