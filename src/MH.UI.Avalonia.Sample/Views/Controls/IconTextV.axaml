<DataTemplates
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vmc="clr-namespace:MH.UI.AvaloniaUI.Sample.ViewModels.Controls"
  xmlns:ap="clr-namespace:MH.UI.AvaloniaUI.AttachedProperties;assembly=MH.UI.AvaloniaUI"
  xmlns:c="clr-namespace:MH.UI.AvaloniaUI.Controls;assembly=MH.UI.AvaloniaUI">

  <DataTemplate DataType="{x:Type vmc:IconTextVM}">
    <StackPanel>
      <c:IconTextBlockItemsControl
        ItemsSource="{Binding Data}"
        ap:Icon.Res="IconBug"
        ItemTemplate="{StaticResource MH.DT.TextBlock.Border.RoundDarker}"/>

      <c:IconTextBlockItemsControl
        ItemsSource="{Binding Data}"
        ap:Icon.Res="IconBug"
        Classes="bordersRoundDark"
        Height="60"/>
    </StackPanel>
  </DataTemplate>
</DataTemplates>